<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javagroupproject.MemberPanelController"
            prefWidth="430" prefHeight="370"
            style="-fx-background-color: white;">

    <!-- Back Button -->
    <Button fx:id="backBtn" text="← Back" onAction="#handleBack"
            layoutX="10" layoutY="10"
            style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 12px;"/>

    <VBox alignment="CENTER" spacing="12"
          layoutX="90" layoutY="60"
          prefWidth="250" prefHeight="300">

        <Label text="MEMBER PANEL"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;"/>

        <Button text="Search Book" fx:id="searchBookBtn" onAction="#handleSearchBook"
                style="-fx-background-color: #4A79A7; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 35;"/>

        <Button text="Checkout History" fx:id="checkoutHistoryBtn" onAction="#handleCheckoutHistory"
                style="-fx-background-color: #4A79A7; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 35;"/>

        <Button text="Checkout Book" fx:id="checkoutBookBtn" onAction="#handleCheckoutBook"
                style="-fx-background-color: #4A79A7; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 35;"/>

        <Button text="View All Books" fx:id="viewBooksBtn" onAction="#handleViewBooks"
                style="-fx-background-color: #4A79A7; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 35;"/>
    </VBox>

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
</AnchorPane>
